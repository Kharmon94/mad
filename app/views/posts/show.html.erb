<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id="comments">
	<h2><%= @post.comments.count %> Comments </h2>
		<%= render @post.comments %>

	<h3>Add a comment</h3>
	<%= render "comments/form" %>
	
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
